<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/spring/root-context.xml</param-value>
  </context-param>
  <context-param>
    <param-name>springDispatcherServletName</param-name>
    <param-value>spring-dispatcher</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
         classpath:/spring/app-*.xml
         classpath:/company-core-context.xml
         classpath:/comp-control-context.xml
         <!-- classpath:/comp-user-context.xml -->
      </param-value>
  </context-param>
  <context-param>
    <param-name>defaultHtmlEscape</param-name>
    <param-value>false</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.tlcpub.net.usr.web.listener.LogoutListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.tlcpub.net.usr.web.listener.LoginListener</listener-class>
  </listener>
    <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    <!-- <async-supported>true</async-supported> -->
  </filter>  
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>filterToBeanProxy</filter-name>
    <filter-class>org.springframework.security.util.FilterToBeanProxy</filter-class>
    <init-param>
      <param-name>targetClass</param-name>
      <param-value>org.springframework.security.util.FilterChainProxy</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>filterToBeanProxy</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>accessProtectFilter</filter-name>
    <filter-class>com.tlcpub.net.core.web.filter.AccessProtectFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>accessProtectFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>spring-dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
            classpath:/spring/web-mvc.xml
         </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>spring-dispatcher</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>controlServlet</servlet-name>
    <servlet-class>com.tlcpub.net.ctl.servlet.ControlServlet</servlet-class>
    <init-param>
      <param-name>accessFiltering</param-name>
      <param-value>${control.accessFiltering}</param-value>
    </init-param>
    <init-param>
      <param-name>accessableAddressPatterns</param-name>
      <param-value>${control.accessableAddressPatterns}</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <!-- <servlet-mapping>
    <servlet-name>controlServlet</servlet-name>
    <url-pattern>${control.uri}</url-pattern>
  </servlet-mapping> -->
  <servlet>
    <servlet-name>deliveryServlet</servlet-name>
    <servlet-class>com.tlcpub.net.ctl.servlet.FileDeliveryServlet</servlet-class>
    <init-param>
      <param-name>fileLocation</param-name>
      <param-value>${delivery.file.location}</param-value>
    </init-param>
    <init-param>
      <param-name>fileMaxSize</param-name>
      <param-value>${delivery.file.maxSize}</param-value>
    </init-param>
    <!-- <init-param>
      <param-name>transportUri</param-name>
      <param-value>${delivery.transport.uri}</param-value>
    </init-param>
    <init-param>
      <param-name>receiveUri</param-name>
      <param-value>${delivery.receive.uri}</param-value>
    </init-param>-->
    <init-param>
      <param-name>port</param-name>
      <param-value>${remote.port}</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
  </servlet>
  <!-- <servlet-mapping>
    <servlet-name>deliveryServlet</servlet-name>
    <url-pattern>${delivery.transport.uri}</url-pattern>
  </servlet-mapping> -->
  <welcome-file-list>    
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error/http/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/error/http/400.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/error/http/401.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error/http/403.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error/http/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/error/http/405.jsp</location>
  </error-page>
  <error-page>
    <error-code>415</error-code>
    <location>/error/http/415.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error/http/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/error/http/503.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>appServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <!-- <servlet-mapping>
    <servlet-name>appServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping> -->
</web-app>